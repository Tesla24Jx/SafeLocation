<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#fff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/default_userhead"
        app:civ_border_width="1dp"
        app:civ_border_color="#fff"
        android:layout_margin="@dimen/a6" />
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="@dimen/t4"
        android:layout_below="@id/include"
        android:layout_toRightOf="@id/img_head"
        android:layout_marginTop="@dimen/a6" />
    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13123156789"
        android:textSize="@dimen/t6"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/img_head"
        android:paddingBottom="@dimen/a5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:43"
        android:textSize="@dimen/t7"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/a5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>